# CollectorStream API Configuration
# Copy this to .env and fill in your values

# Server
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Security - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your-super-secret-key-change-this-to-a-long-random-string

# AWS S3 (optional - for image storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=collectorstream-cards

# AI Card Identification APIs
# Primary: Anthropic Claude Vision (best accuracy)
# Get your API key at https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Fallback: OpenRouter (free models available)
# Get your API key at https://openrouter.ai/
OPENROUTER_API_KEY=

# Backup: Ximilar (sports card specific)
# Get your API key at https://www.ximilar.com/
XIMILAR_API_KEY=

# Email (optional - for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@collectorstream.com
